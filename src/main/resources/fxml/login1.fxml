<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.Tubes_PBO.controllers.RoleLogincontroller"
           prefWidth="800" prefHeight="550"
           stylesheets="@/css/style_login1.css">

    <VBox
        alignment="CENTER"
        spacing="15"

        minWidth="380"
        prefWidth="380"
        maxWidth="380"

        minHeight="460"
        prefHeight="460"
        maxHeight="460"

        styleClass="login-card">


        <padding>
            <Insets top="40" right="30" bottom="30" left="30"/>
        </padding>


        <!-- LOGO -->
        <ImageView fitHeight="90" fitWidth="90" preserveRatio="true">
            <image>
                <Image url="@Logo.png"/>
            </image>
        </ImageView>

        <!-- TITLE -->
        <Label text="Welcome to Donat Keliling"
               style="-fx-font-size: 22px; -fx-font-weight: bold;" />

        <Label text="Masukkan menggunakan akun ANDA pada:"
               style="-fx-font-size: 14px;" />

        <!-- BUTTON CUSTOMER -->
        <Button text="Customer"
        onAction="#onCustomerClick"
        styleClass="primary-btn"/>


        <Label text="OR" style="-fx-font-size: 14px;" />

        <!-- BUTTON KARYAWAN -->
        <Button text="Karyawan"
        onAction="#onKaryawanClick"
        styleClass="primary-btn"/>

        <Label text="Belum punya akun?"
               style="-fx-font-size: 13px;" />

        <Button text="Daftar Sekarang"
                onAction="#openRegisterPopup"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #2196F3;
                       -fx-underline: true;
                       -fx-font-size: 13px;" />

    </VBox>

</StackPane>
