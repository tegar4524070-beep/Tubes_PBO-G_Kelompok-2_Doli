<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="697.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.Tubes_PBO.controllers.StockKaryawanController"
            stylesheets="@/css/style_StockKaryawan.css">

    <children>

        <!-- TITLE -->
        <Label layoutX="269" layoutY="34" text="DONAT KELILING (DOLI)">
         <font><Font name="Arial Black" size="18"/></font>
      </Label>

      <Label layoutX="350" layoutY="71" text="SHOP ALL">
         <font><Font name="Arial Black" size="18"/></font>
      </Label>

      <Label layoutX="339" layoutY="107" text="Colection Tags">
         <font><Font name="Arial Black" size="12"/></font>
      </Label>

        <!-- NAVIGATION -->
        <Button layoutX="174" layoutY="153"
            prefWidth="110"
            text="PRODUCTS"
            onAction="#goToHome"/>

        <Button layoutX="345" layoutY="153"
                prefWidth="110"
                text="STOCK"
                disable="true"/>

        <Button layoutX="512" layoutY="153"
                prefWidth="110"
                text="ORDER"
                onAction="#goToOrders"/>

        <Button text="Logout"
            layoutX="20"
            layoutY="20"
            onAction="#handleLogout"
            styleClass="logout-btn"/>


        <!-- TABLE STOCK -->
        <TableView fx:id="stockTable"
                   layoutX="100"
                   layoutY="220"
                   prefWidth="600"
                   prefHeight="420">

            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colName" text="Nama Produk" prefWidth="180"/>
                <TableColumn fx:id="colPrice" text="Harga" prefWidth="120"/>
                <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
                <TableColumn fx:id="colAction" text="Aksi" prefWidth="120"/>
            </columns>

        </TableView>

    </children>
</AnchorPane>
