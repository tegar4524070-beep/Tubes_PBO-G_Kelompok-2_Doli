<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.Tubes_PBO.controllers.OrderCustomerController"
            prefHeight="697.0"
            prefWidth="800.0"
            stylesheets="@/css/style_OrderCustomer.css">

    <!-- ================= HEADER ================= -->
    <VBox
            layoutX="0"
            layoutY="40"
            prefWidth="800"
            spacing="12"
            alignment="CENTER">

        <Label text="DONAT KELILING (DOLI)"
            styleClass="header-title"/>

        <Label text="SHOP ALL"
            styleClass="header-subtitle"/>

        <Label text="Collection Tags"
            styleClass="header-tags"/>

    </VBox>


    <!-- ================= NAV BUTTON ================= -->
    <Button layoutX="174" layoutY="160" prefWidth="110" text="PRODUCTS" onAction="#goToHome"/>
    <Button layoutX="345" layoutY="160" prefWidth="110" text="ORDER"/>
    <Button layoutX="512" layoutY="160" prefWidth="110" text="HISTORY" onAction="#goToHistory"/>

    <!-- ================= LOGOUT ================= -->
    <Button text="Logout"
            layoutX="20"
            layoutY="20"
            onAction="#handleLogout"
            styleClass="logout-btn"/>

    <!-- ================= DATA ORDER ================= -->
    <VBox layoutX="120"
          layoutY="250"
          spacing="12">

        <Label fx:id="orderNumber" text="Order Number"/>
        <Label fx:id="orderTime" text="Order Time"/>
        <Label fx:id="orderChannel" text="Order Channel"/>
        <Label fx:id="paymentMethod" text="Payment Method"/>
        <Label fx:id="totalLabel" text="Total" styleClass="total-price"/>
    </VBox>

    <!-- ================= ORDER ITEMS CARD ================= -->
    <VBox layoutX="350"
          layoutY="220"
          prefWidth="380"
          prefHeight="360"
          styleClass="order-card">

        <ScrollPane fitToWidth="true"
                    fitToHeight="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    styleClass="order-scroll">

            <content>
                <VBox fx:id="itemsContainer"
                      spacing="15"
                      prefWidth="340">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </VBox>

    <!-- ================= ACTION BUTTON ================= -->
    <Button fx:id="cancelButton"
            text="CANCEL ORDER"
            layoutX="200"
            layoutY="610"
            onAction="#cancelOrder"
            styleClass="cancel-btn"/>

    <Button fx:id="buyButton"
            text="BUY / PAY"
            layoutX="450"
            layoutY="610"
            onAction="#payOrder"
            styleClass="buy-btn"/>

</AnchorPane>
